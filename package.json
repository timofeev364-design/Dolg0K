{
  "name": "babki",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start --workspace=apps/mobile",
    "mobile:web": "npm run web --workspace=apps/mobile",
    "mobile:test": "npm run test --workspace=apps/mobile",
    "mobile:typecheck": "npm run typecheck --workspace=apps/mobile",
    "api": "npm run dev --workspace=apps/api",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "postinstall": "node scripts/postinstall-patch.js && npm run patch:expo",
    "patch:expo": "node scripts/patch-expo-externals.js"
  },
  "devDependencies": {
    "typescript": "~5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-test-renderer": "18.3.1"
  },
  "dependencies": {
    "expo-linear-gradient": "~14.0.2"
  }
}
